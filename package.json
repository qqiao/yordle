  "scripts": {
    "i18n:extract": "yarn run format && lit-localize extract",
    "i18n:build": "lit-localize build",
    "format": "eslint --ext .ts --ext .cjs --ext .mjs . --fix --ignore-path .gitignore && prettier \"**/*.(cjs|mjs|ts)\" --write",
    "build": "yarn clean && yarn i18n:build && tsc && rollup -c rollup.config.mjs && gulp copy",
    "clean": "rimraf dist/ out-tsc/",
    "deploy": "yarn build && gulp deploy",
    "start": "yarn build && concurrently --kill-others \"tsc --watch\" \"rollup -w -c rollup.config.mjs\" \"gulp\"",
    "test": "gulp test"
  }
